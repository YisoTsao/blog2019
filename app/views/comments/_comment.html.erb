<%= render 'comments/form' %>
<% @comments.each do |comment| %>
<div class="container">
	<div class="row" style="margin-bottom: 0px;">
		<div class="col-sm-1">
			<div class="thumbnail">
				<img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
			</div>
		</div>
		<% if current_user == comment.user %>
				<%= link_to 'Delete', [comment.post, comment], method: :delete, class: 'btn btn-danger'  %>
				<%= link_to ' Edit ', edit_post_comment_path(comment.post, comment), class: 'btn btn-warning' %>
				<% end %>
		<div class="col-sm-5">
			<div class="panel panel-default">
				<div class="panel-heading">
					<strong><%= comment.user.name %></strong>
					<span class="text-muted"><%= comment.created_at.strftime("%Y-%m-%d %H:%M:%S") %>發佈.</span>
				</div>
				<div class="panel-body">
					<%= comment.content %>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>