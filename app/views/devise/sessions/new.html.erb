<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<br><br><br>
<p><%= devise_error_messages! %></p>

<div class="container-fluid device-b-color" style="padding-bottom: 16px;">
  <div class="row vertical-offset-100">
    <div class=" col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-4 col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row-fluid user-row">
            <h4>登入</h4>
          </div>
        </div>
        <div class="panel-body">
          <form accept-charset="UTF-8" role="form" class="form-signin">
            <fieldset>
              <label class="panel-login">
                <%= f.label :email %>
              </label>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
              <br>
              <label class="panel-login">
                <%= f.label :password %>
              </label>
              <%= f.password_field :password, autofocus: true, class: "form-control" %>
              <br>
              <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
              <% end -%>
              <div class="form-group">
                <%= f.submit "登入帳號", class: "btn btn-primary btn-block" %>
              </div>
              <% end %>
              <%= render "devise/shared/links" %>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>