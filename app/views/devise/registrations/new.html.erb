<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<p><%= devise_error_messages! %></p>
<div class="container-fluid device-b-color">
  <div class="row vertical-offset-100">
    <div class=" col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-4 col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row-fluid user-row">
            <h4>建立帳號</h4>
          </div>
        </div>
        <div class="panel-body">
          <form accept-charset="UTF-8" role="form" class="form-signin">
            <div>
              add an image....
              <%= f.file_field :image %>
            </div>
            <label >
              <%= f.label :email %>
            </label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            <br>
            <label >
              <%= f.label :password %>
            </label>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            <br>
            <label >
              <%= f.label :password_confirmation %>
            </label>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            <br>
            <label >
              <%= f.label :account %>
            </label>
            <%= f.text_field :account, autocomplete: "off", class: "form-control" %>
            <br>
            <label >
              <%= f.label :name %>
            </label>
            <%= f.text_field :name, autocomplete: "off", class: "form-control" %>
            <br>
            <label >
              <%= f.label :click_id %>
            </label>
            <%= f.text_field :click_id, autocomplete: "off", class: "form-control" %>
            <br>
            <label >
              <%= f.label :phone %>
            </label>
            <%= f.text_field :phone, autocomplete: "off", class: "form-control" %>
            <br>
            <label >
              <%= f.label :id_number %>
            </label>
            <%= f.text_field :id_number, autocomplete: "off", class: "form-control" %>
            <br>
            <label >
              <%= f.label :birth_day %>
            </label>
            <%= f.text_field :birth_day, autocomplete: "off", class: "form-control" %>
            <br>
            <label >
              <%= f.label :country_code %>
            </label>
            <%= f.text_field :country_code, autocomplete: "off", class: "form-control" %>
            <br>
            <label >
              <%= f.label :qq %>
            </label>
            <%= f.text_field :qq, autocomplete: "off", class: "form-control" %>
            <br>
            <label >
              <%= f.label :webchat %>
            </label>
            <%= f.text_field :webchat, autocomplete: "off", class: "form-control" %>
            <br>
            <label >
              <%= f.label :agree_terms %>
            </label>
            <%= f.check_box :agree_terms, autocomplete: "off"%>
            <br>
            <div class="form-group">
              <%= f.submit "創建帳號", class: "btn btn-primary btn-block" %>
            </div>
            <%= render "devise/shared/links" %>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>